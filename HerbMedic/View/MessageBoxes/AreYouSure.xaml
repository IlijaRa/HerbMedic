<Window x:Class="HerbMedic.View.MessageBoxes.AreYouSure"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HerbMedic.View.MessageBoxes"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="AreYouSure" Height="200" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/images/messageBoxes/InfoBackground.png"/>
    </Window.Background>
    <Grid>
        <Label Content="Are you sure?" HorizontalAlignment="Left" Margin="135,83,0,0" VerticalAlignment="Top" FontSize="17"/>
        <Image HorizontalAlignment="Left" Height="87" Margin="147,2,0,0" VerticalAlignment="Top" Width="87" Source="/images/messageBoxes/questionmark.png"/>
        <Button Content="Yes" HorizontalAlignment="Left" Margin="39,132,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="17" Background="#0e7fbc"/>
        <Button Content="No" HorizontalAlignment="Left" Margin="229,132,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="17" Background="#0e7fbc"/>

    </Grid>
</Window>

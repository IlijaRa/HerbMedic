<Window x:Class="HerbMedic.View.MessageBoxes.CommandAboutFillingRoomInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HerbMedic.View.MessageBoxes"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        Title="CommandAboutFillingRoomInfo" Height="200" Width="400">
    <Window.Background>
        <ImageBrush ImageSource="/images/messageBoxes/DangerBackground.png"/>
    </Window.Background>
    <Grid>
        <Image HorizontalAlignment="Left" Height="87" Margin="147,3,0,0" VerticalAlignment="Top" Width="87" Source="/images/messageBoxes/danger.png"/>
        <Label Content="There are more rooms that you need to fill!" HorizontalAlignment="Left" Margin="27,89,0,0" VerticalAlignment="Top" FontSize="17"/>
        <Button Content="OK" HorizontalAlignment="Left" Margin="131,137,0,0" VerticalAlignment="Top" Width="120" Height="40" FontSize="17" Background="#f6252a" Click="Button_Click"/>
    </Grid>
</Window>

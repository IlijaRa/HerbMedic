        Title="HomeSecretary" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="/images/templates/HomeSecretary.png"/>
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="383*"/>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="10*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="243*"/>
            <RowDefinition Height="347*"/>
        </Grid.RowDefinitions>
        <Image Grid.Column="0" Grid.Row="1" Source="/images/users/nurse.png" Margin="70,19,42,58"/>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Content="Appointment CRUD" Height="35px" Margin="26,6,5,7" Background="#f6252a" Foreground="#FF00182D" FontSize="17px" Click="ButtonAppointmentCRUD"/>

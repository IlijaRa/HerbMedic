            <Label Content="Last name:" HorizontalAlignment="Left" Margin="44,112,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="Username:" HorizontalAlignment="Left" Margin="44,12,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="Password:" HorizontalAlignment="Left" Margin="44,45,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="E-mail:" HorizontalAlignment="Left" Margin="44,250,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="Address:" HorizontalAlignment="Left" Margin="44,214,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="Date of birth:" HorizontalAlignment="Left" Margin="44,284,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <Label Content="First name:" HorizontalAlignment="Left" Margin="43,80,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
            <TextBox x:Name="Textbox6" Margin="170,187,10,132" Height="28px" Foreground="#FF00182D" FontSize="17px" IsEnabled="False" BorderBrush="#FFABADB3"/>
            <Label Content="Phone number:" HorizontalAlignment="Left" Margin="44,181,0,0" VerticalAlignment="Top" Foreground="#FF00182D" FontSize="17px"/>
        </Grid>
    </Grid>
</Window>
